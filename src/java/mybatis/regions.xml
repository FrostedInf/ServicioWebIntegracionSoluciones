<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "regions">
   <select id = "getAll" resultType="pojos.Regions">
   SELECT * FROM REGIONS
   </select>
   
   <insert id = "insert" parameterType = "pojos.Regions">
      INSERT INTO REGIONS (REGION_ID, REGION_NAME) VALUES (#{region_id}, #{region_name})
   </insert>
   
   <select id = "getById" parameterType = "int" resultType = "pojos.Regions">
      SELECT * FROM REGIONS WHERE REGION_ID = #{region_id};
   </select>
  	
     	
   <update id = "update" parameterType = "pojos.Regions">
      UPDATE REGIONS SET REGION_NAME = #{region_name}, 
      WHERE REGION_ID = #{region_id};
   </update>
    	
</mapper> 